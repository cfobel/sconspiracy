# vim:filetype=python

@register
class ARToolKitPlus(LibExt):
    register_names = ['artoolkitplus']

    version = '2.0.2'

    libs           = ['ARToolKitPlus{debug}']

    debug_suffix   = "D"

    cpppath = [
               ('include','ARToolKitPlus','include'),
              ]

    def darwin(self):
        self.debug_suffix   = "_D"
        self.libs = ['ARToolKitPlus{debug}.2.0.2']

